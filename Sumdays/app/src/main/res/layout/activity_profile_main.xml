<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_main_root"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".CalendarActivity">


    <ScrollView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 사용자 블록 -->
            <LinearLayout
                android:background="@drawable/settings_rounded_card"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 닉네임 (왼쪽 정렬) -->
                    <TextView
                        android:id="@+id/nickname"
                        android:text="닉네임"
                        android:textSize="@dimen/text_size_M"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:text="회원가입 / 로그인"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_divider" />

            <LinearLayout
                android:id="@+id/diaryStyleBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:id="@+id/diaryStyleBlockText"
                    android:text="일기 스타일"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labsBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:id="@+id/labsBlockText"
                    android:text="실험실"
                    style="@style/TextAppearance.App.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accountBlock"
                style="@style/SettingsItemStyle" >
                <TextView
                    android:id="@+id/accountBlockText"
                    android:text="계정 설정"
                    style="@style/TextAppearance.App.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/themeBlock"
                style="@style/SettingsItemStyle">
                <TextView
                    android:id="@+id/themeBlockText"
                    android:text="테마 변경"
                    style="@style/TextAppearance.App.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/include_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>